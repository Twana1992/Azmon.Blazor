@page "/customer-detail/{Id:int}"
@inject Service.CustomerService CustomerService
@inject Service.Cus_PayService Cus_PayService
@inject Service.SellService sellService
@inject Service.SellDetailService sellDetailService
@inject Service.ProductService ProductService
<h3>Customer Detail</h3>
<hr />

@if (customer == null)
{
    <div class="loader">
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
        <div class="loaders"></div>
    </div>
}
else
{
    <div class="cards-wrapper">
        <p><strong>Id:</strong> @customer.Id</p>
        <p><strong>Name:</strong> @customer.Name</p>
        <p><strong>Phone:</strong> @customer.Phone</p>
        <p><strong>Address:</strong> @customer.Address</p>
        <p><strong>Note:</strong> @customer.Note</p>
        <p><strong>IQD:</strong> @customer.MainAmount</p>
        <p><strong>USD:</strong> @customer.sec_Amount</p>
        <p><strong>Add Date:</strong> @customer.AddedDate</p>
        <p><strong>Update:</strong> @customer.UpdateDate</p>
    </div>

    <button class="btn btn-primary mb-2" @onclick="ToggleForm">@(isPaymentModalVisible == false ? "Add Payment" : "Close Payment") </button>
    <button class="btn btn-primary mb-2"@onclick="ToggleSellForm">@(showSellForm == false ? "Add Sell" : "Close Sell")</button>
    <hr />
    @if (isPaymentModalVisible)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Payment</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Main Amount (IQD)</label>
                        <input class="form-control" @bind="newPayment.MainAmount" />
                    </div>
                    <div class="mb-3">
                        <label>Second Amount (USD)</label>
                        <input class="form-control" @bind="newPayment.sec_Amount" />
                    </div>
                    <div class="mb-3">
                        <label>Note</label>
                        <textarea class="form-control" @bind="newPayment.Note"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                        <button class="btn btn-secondary" @onclick ="ClosePaymentModal">Cancel</button>
                        <button class="btn btn-primary" @onclick= "SavePayment">Save</button>
                </div>
            </div>
        </div>
    </div>
        <hr />

    } 
    @if (showSellForm)
    {
            <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header d-flex justify-content-between align-items-center">
                            <h5 class="modal-title">Add Sell for : @customer?.Name</h5>
                            <button type="button" class="btn-close" aria-label="Close" @onclick="ToggleSellForm"></button>
                        </div>

                        <div class="modal-body">
                            <EditForm Model="newSell" OnValidSubmit="SaveSellAsync">
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label>Pay</label>
                                        <InputNumber class="form-control" @bind-Value="newSell.Paid" />
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label>Currency</label>
                                        <InputText class="form-control" @bind-Value="newSell.CurrencyType" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label>Product</label>
                                    <select class="form-control" @bind="newDetail.ProductId">
                                    @foreach (var p in products)
                                    {
                                                <option value="@p.Id">@p.Name</option>
                                    }
                                    </select>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label>Quantity</label>
                                        <InputNumber class="form-control" @bind-Value="newDetail.Quantity" />
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label>Price</label>
                                        <InputNumber class="form-control" @bind-Value="newDetail.Price" />
                                    </div>
                                </div>

                                <button type="button" class="btn btn-secondary me-2" @onclick="AddDetail">Add Detail</button>

                            @if (detailList.Any())
                            {
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Product Name</th>
                                                    <th>Price</th>
                                                    <th>Quantity</th>
                                                    <th>All Price</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                        @foreach (var item in detailList)
                                        {
                                                        <tr>
                                                            <td>@products.FirstOrDefault(p => p.Id == item.ProductId)?.Name</td>
                                                            <td>@item.Price</td>
                                                            <td>@item.Quantity</td>
                                                            <td>@(item.Price * item.Quantity)</td>
                                                            <td>
                                                                <button class="btn btn-sm btn-danger" @onclick="() => RemoveDetail(item)">Delete</button>
                                                            </td>
                                                        </tr>
                                        }
                                            </tbody>
                                        </table>
                            }

                                <button type="submit" class="btn btn-primary me-2">@((newSell.Id == 0) ? "Add" : "Update")</button>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
    }

    <div class="cards-wrapper">
        @if (cus_Pay != null)
        {
            <h3>Customer Payment Detail</h3>
            <hr />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>IQD</th>
                        <th>USD</th>
                        <th>Note</th>
                        <th>Add Date</th>
                        <th>Update</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var p in cus_Pay)
                    {
                        <tr>
                            <td>@p.MainAmount</td>
                            <td>@p.sec_Amount</td>
                            <td>@p.Note</td>
                            <td>@p.AddDate</td>
                            <td>@p.ModDate</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-1" @onclick="() => EditPayment(p)">Edit</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeletePayment(p.Id)">Delete</button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        @if (cus_Pay != null && sell != null)
        {
            <hr />
        }
        @if (sell != null)
        {
            <h3>Customer Sell Detail</h3>
            <hr />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Price</th>
                        <th>Paid</th>
                        <th>Currncy Type</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var p in sell)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Price</td>
                            <td>@p.Paid</td>
                            <td>@p.CurrencyType</td>
                            <td>@p.BillDate</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-1" >Edit</button>
                                <button class="btn btn-sm btn-danger" >Delete</button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
    </div>


}


